<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="0dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="10dp"
    app:strokeWidth="3dp"
    android:outlineProvider="none">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <!--정답 오답 사진-->

        <!--문제 번호-->
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/qResultWrong2"
            android:layout_alignTop="@+id/qResultWrong2"
            android:layout_alignRight="@+id/qResultWrong2"
            android:layout_alignBottom="@+id/qResultWrong2"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:text="1."
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/qResultWrong2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/closelarge" />

        <ImageView
            android:id="@+id/qResultCorrect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/correctlarge" />
    </RelativeLayout>
    <!--문제 사진-->
    <!--문제-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/pancil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1">
            <!--문제-->

            <TextView
                android:id="@+id/tv_Q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:text="1."
                android:textSize="30sp" />

            <TextView
                android:id="@+id/choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="50dp"
                android:text="웃다"
                android:textColor="#757575"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_Q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="100dp"
                android:text="2."
                android:textSize="30sp" />

            <TextView
                android:id="@+id/choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="100dp"
                android:text="울다"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="150dp"
                android:text="3."
                android:textSize="30sp" />

            <TextView
                android:id="@+id/choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="150dp"
                android:text="화내다"
                android:textSize="30sp" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>