<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_edge"
    tools:context=".History_result">

    <!--    상단 뷰-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#F6C74B">
        <!--       뒤로가기 화살표 버튼-->
        <Button
            android:id="@+id/arrowbutton"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/arrow"
            />
        <!--상단-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="22dp"
            android:text="결과"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--1. 문제 번호   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--정답 오답 사진-->
                <ImageView
                    android:id="@+id/resultImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/closelarge" />
                <!--문제 번호-->
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/resultImage1"
                    android:layout_alignTop="@+id/resultImage1"
                    android:layout_alignRight="@+id/resultImage1"
                    android:layout_alignBottom="@+id/resultImage1"

                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:letterSpacing="0.04"
                    android:text="1."
                    android:textSize="30sp" />
            </RelativeLayout>
            <!--문제 사진-->
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:src="@drawable/pancil" />
            <!--문제-->
            <EditText
                android:id="@+id/Number1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:drawableEnd="@drawable/close"
                android:textColor="#ff0000"
                android:text="1. 웃다"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="2. 울다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:drawableEnd="@drawable/correct"
                android:textColor="#568A35"
                android:text="3. 화내다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />
            <!--2번 시작-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/resultImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/correctlarge" />

                <!-- 2.문제 번호   -->
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/resultImage2"
                    android:layout_alignTop="@+id/resultImage2"
                    android:layout_alignRight="@+id/resultImage2"
                    android:layout_alignBottom="@+id/resultImage2"

                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:letterSpacing="0.04"
                    android:text="2."
                    android:textSize="30sp"/>

            </RelativeLayout>


            <!--문제 사진-->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:src="@drawable/pancil" />
            <!--문제-->
            <EditText
                android:id="@+id/Number2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="1. 웃다"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:textColor="#568A35"
                android:drawableEnd="@drawable/correct"
                android:text="2. 울다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="3. 화내다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />

            <!-- 3.문제 번호   -->
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"/>

            <!--문제 사진-->
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/pancil" />
            <!--문제-->
            <EditText
                android:id="@+id/Number3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="1. 웃다"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="2. 울다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="3. 화내다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />

            <!-- 4.문제 번호   -->
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4."
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"/>

            <!--문제 사진-->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/pancil" />
            <!--문제-->
            <EditText
                android:id="@+id/Number4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="1. 웃다"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="95dp"
                />

            <EditText
                android:id="@+id/Number4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="2. 울다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />
            <EditText
                android:id="@+id/Number4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:inputType="number"
                android:text="2. 울다"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="95dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
